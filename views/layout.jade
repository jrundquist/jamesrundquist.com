    script(type='text/javascript')
      $('html, body').animate({scrollTop:'0px'}, 1, 'swing');
      $('.scroll').bind('click',function(event){
        var $anchor = $(this);
        $('html, body').stop().animate({
          scrollTop: ($($anchor.attr('href')).offset().top - ($('#header').height()*1.5))
        }, 500, 'swing');
        event.preventDefault();
      });
      if ( $('#contact-form').length !== 0 ){
          $('#contact-form').html5form({
           allBrowsers : true,
           messages: 'en',
           method : 'POST',
           action: '/contact/',
           responseDiv: '#contact-response'
          });
        }
